<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tangyuan.Pages.PostPage"
             Title="帖子"
             Shell.BackgroundColor="White"
             Shell.ForegroundColor="{StaticResource Prestige}"
             Shell.TitleColor="{StaticResource Prestige}">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="true" IsVisible="true"/>
    </Shell.BackButtonBehavior>
    
    <ScrollView>
        <StackLayout Margin="10">
            <CarouselView x:Name="crvImages" IndicatorView="{x:Reference idvCurrentImage}" ItemsSource="{Binding images}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Aspect="AspectFill" Source="{Binding ImageUrl}"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            <IndicatorView x:Name="idvCurrentImage" IndicatorColor="{StaticResource Secondary}" SelectedIndicatorColor="{StaticResource Gray400}"
                           HorizontalOptions="Center"/>
            <Label x:Name="lblTitle" FontAttributes="Bold" FontSize="Title"  MaxLines="3"/>
            <HorizontalStackLayout Margin="0,6,0,0" VerticalOptions="Center">
                <Label x:Name="lblDate" FontSize="Micro" TextColor="{StaticResource Gray400}" VerticalTextAlignment="Center"/>
                <Label x:Name="lblLocation" Margin="12,0,0,0" FontSize="Micro" TextColor="{StaticResource Gray400}" VerticalTextAlignment="Center" Text="发布于甘肃"/>
                <Border StrokeShape="RoundRectangle 5,5,5,5" StrokeThickness="0" BackgroundColor="CadetBlue" Margin="12,0,0,0" VerticalOptions="Center">
                    <Label x:Name="lblSchool" FontSize="Micro" Margin="3" TextColor="White" VerticalOptions="Center" Text="嘉峪关市酒钢三中"/>
                </Border>
            </HorizontalStackLayout>
            <StackLayout x:Name="stlTextLayouter" Margin="0,20,0,0"/>
        </StackLayout>
    </ScrollView>
</ContentPage>