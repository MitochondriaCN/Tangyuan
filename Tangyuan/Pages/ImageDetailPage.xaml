<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:t="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:Tangyuan.Controls"
             x:Class="Tangyuan.Pages.ImageDetailPage"
             Shell.NavBarIsVisible="False"
             Shell.BackgroundColor="Black"
             Shell.TabBarIsVisible="False">
    <ContentPage.Behaviors>
        <t:StatusBarBehavior StatusBarColor="Black" StatusBarStyle="LightContent"/>
    </ContentPage.Behaviors>
    
    <local:PinchToZoomView BackgroundColor="Black">
        <Image x:Name="imgImage" Aspect="AspectFit"/>
    </local:PinchToZoomView>
</ContentPage>